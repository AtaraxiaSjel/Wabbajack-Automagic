        <TextBox x:Name="textOutput" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="430" Height="320" Margin="6,10,6,0"/>
